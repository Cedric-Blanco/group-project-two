<html lang="en-US">
    <head>
        <meta charset="utf-8" />
        <title>ADMIN CONSOLE</title>
        <link rel="stylesheet" type="text/css" href="css/style.css">
       <!-- Adobe Font -->
       <link rel="stylesheet" href="https://use.typekit.net/zpe5apk.css">
       <!-- Material Symbols for Icons -->
       <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    </head>
    <body>
        <header>
            <a href="index.html" class="logo">Kommerse Magazine</a>
            <ul>
                <li><a href="index.html"><div class="nav-link-wrapper">HOME<span class="material-symbols-outlined">home</span></div></a></li>
                <li><a href="catalog.html"><div class="nav-link-wrapper">STORE<span class="material-symbols-outlined">storefront</span></div></a></li>
                <li><a href="/dashboard"><div class="nav-link-wrapper">ACCOUNT<span class="material-symbols-outlined">account_circle</span></div></a></li>
                <li><a href="/checkout"><div class="nav-link-wrapper">CART<span class="material-symbols-outlined">shopping_cart</span></div></a></li>
                <li><a href="login.html"><div class="nav-link-wrapper">LOGIN<span class="material-symbols-outlined">login</span></div></a></li>
                <li><a href="signup.html"><div class="nav-link-wrapper">SIGN UP<span class="material-symbols-outlined">person_add</span></div></a></li>
            </ul>
        </header>
        <main>
            <h1>Welcome back <%= username %>!</h1>
            <section>
                <article id="add_product">
                    <form action="/console/add_product" method="post">
                        <ul>
                          <li>
                            <label for="name">Product Name:</label>
                            <input type="text" id="name" name="product_name" />
                          </li>
                          <li>
                            <label for="description">Product Description:</label>
                            <textarea id="description" name="product_description"></textarea>
                          </li>
                          <li>
                            <label for="price">Price:</label>
                            <input type="numeric" id="price" name="product_price"/>
                          </li>
                          <li>
                            <label for="imgLink">Image URL:</label>
                            <input type="text" id="imgLink" name="img_link"/>
                          </li>
                          <li class="button">
                            <button type="submit">Add Product</button>
                          </li>
                        </ul>
                      </form>
                </article>
            </section>
        </main>
    </body>
</html>